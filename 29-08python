#Even digits in a number
num = 47268135
even_digits = []

while num > 0:
    digit = num % 10
    if digit % 2 == 0:
        even_digits.append(digit)
    num //= 10

print("Even digits:", even_digits[::-1])   # Reverse to keep original order
#prime digits in a number
num = 3789231
prime_digits = []

while num > 0:
    digit = num % 10
    if digit in [2, 3, 5, 7]:
        prime_digits.append(digit)
    num //= 10

# reverse list to maintain original order
prime_digits.reverse()

print("Prime digits in number:", prime_digits)
#perfect number
num = 28
div_sum = 0

for i in range(1, num):
    if num % i == 0:
        div_sum += i

if div_sum == num:
    print(num, "is a Perfect Number")
else:
    print(num, "is NOT a Perfect Number")
